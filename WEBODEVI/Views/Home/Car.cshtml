@using WEBODEVI.Models;
@model List<Cars>




<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/../../images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="/Index">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Arabalarımız <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Arabanızı Seçin</h1>
            </div>
        </div>
    </div>
</section>


<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @foreach(var item in Model )
            {
                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end" style="background-image: url(/../../images/@item.CarPhoto);">
                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a href="">@item.CarBrand</a></h2>
                            <div class="d-flex mb-3">
                                <span class="cat">@item.CarModel</span>
                                <p class="price ml-auto">@item.CarDayPrice TL<span>/gün</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block"><a href="#" class="btn btn-primary py-2 mr-1">Rezervasyon Yap</a> <a href="car-single.html" class="btn btn-secondary py-2 ml-1">Detaylar</a></p>
                        </div>
                    </div>
                </div>
            }
    </div>
</section>

