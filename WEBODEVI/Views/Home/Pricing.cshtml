@using WEBODEVI.Models;
@model List<Cars>

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/../../images/bg_3.jpg');" data-stellar-background-ratio="0.5">
	<div class="overlay"></div>
	<div class="container">
		<div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
			<div class="col-md-9 ftco-animate pb-5">
				<p class="breadcrumbs"><span class="mr-2"><a href="Index">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Fiyatlandırma <i class="ion-ios-arrow-forward"></i></span></p>
				<h1 class="mb-3 bread">Fiyatlandırma</h1>
			</div>
		</div>
	</div>
</section>

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="car-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th class="bg-primary heading">Saatlik Ücret</th>
								<th class="bg-dark heading">Günlük Ücret</th>
								<th class="bg-black heading">Kiralama</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							 {
							<tr class="">
								<td class="car-image"><div class="img" style="background-image:url(/../../images/@item.CarPhoto);"></div></td>
								<td class="product-name">
									<h3>@item.CarBrand @item.CarModel</h3>
									<p class="mb-0 rated">
										<span>Oy:</span>
										<span class="ion-ios-star"></span>
										<span class="ion-ios-star"></span>
										<span class="ion-ios-star"></span>
										<span class="ion-ios-star"></span>
										<span class="ion-ios-star"></span>
									</p>
								</td>

								<td class="price">
									<p class="btn-custom"><a href="#">Rent a car</a></p>
									<div class="price-rate">
										<h3>
											<span class="num"><small class="currency">TL</small> @item.CarHourPrice</span>
											<span class="per">/saatlik</span>
										</h3>
										<span class="subheading">TL 30/saatlik yakıt ek ücreti</span>
									</div>
								</td>

								<td class="price">
									<p class="btn-custom"><a href="#">Rent a car</a></p>
									<div class="price-rate">
										<h3>
											<span class="num"><small class="currency">TL</small> @item.CarDayPrice</span>
											<span class="per">/günlük</span>
										</h3>
										<span class="subheading">TL 30/saatlik yakıt ek ücreti</span>
									</div>
								</td>

								<td class="price">
									<p class="btn-custom"><a href="#">Rent a car</a></p>
									<div class="price-rate">
										<h3>
											<span class="num"><small class="currency">TL</small> @item.CarMonthPrice</span>
											<span class="per">/aylık</span>
										</h3>
										<span class="subheading">TL 30/saatlik yakıt ek ücreti</span>
									</div>
								</td>
								
							</tr>
							}<!-- END TR-->

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</section>