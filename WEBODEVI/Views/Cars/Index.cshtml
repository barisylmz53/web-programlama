@model IEnumerable<WEBODEVI.Models.Cars>

@{
    ViewData["Title"] = "Index";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/../../images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="/Home/Index">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Admin <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Admin Paneli</h1>
            </div>
        </div>
    </div>
</section>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarHourPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarDayPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarMonthPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarPhoto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarHourPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarDayPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarMonthPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarPhoto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
